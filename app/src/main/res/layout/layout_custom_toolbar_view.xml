<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:id="@+id/rl_hamburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:visibility="gone"
            android:src="@drawable/icon_head"
            tools:visibility="visible"
            />
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:src="@drawable/icon_black_back"
            tools:visibility="visible"
            />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_input"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="查询地名地址、图层元素"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/agmobile_grey_3"
        android:layout_marginLeft="12dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_menu_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:overScrollMode="never"
        />

    <View
        android:id="@+id/v_line"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/agmobile_divider"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        tools:visibility="visible"
        />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="4dp"
        android:src="@drawable/icon_close"
        android:visibility="gone"
        tools:visibility="visible"
        />
</LinearLayout>