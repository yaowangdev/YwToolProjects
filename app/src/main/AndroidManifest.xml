<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appdev.toolkit">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".fragmentdialog.CommentReplyActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name=".bottomsheet.BottomSheetDemoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".fragmentdialog.DialogDemoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".bottomsheet.EasyBottomSheetActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".popuwindow.CollapseDragPopuwindowActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".popuwindow.PopuwindowDemoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".coordinatorlayout.CoordinatorLayoutDemoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".coordinatorlayout.EazyCoordinatorLayoutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".keyboardswitch.KeyboardSwitchDemoActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".keyboardswitch.KeyboardSwitchActivity1"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
        <activity android:name=".keyboardswitch.KeyboardSwitchActivity2"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustResize"/>
    </application>

</manifest>