<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_create_group"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:paddingRight="66dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            tools:src="@drawable/cv_ic_search" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_marginRight="16dp"
            android:layout_toRightOf="@id/iv_icon"
            tools:text="创建群组"
            android:textColor="@color/agmobile_text_body"
            android:textSize="@dimen/agmobile_text_body" />
    </RelativeLayout>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/agmobile_divider"
        android:layout_alignLeft="@id/rl_item"
        android:layout_alignRight="@id/rl_item"
        android:layout_below="@id/rl_item"/>

</RelativeLayout>