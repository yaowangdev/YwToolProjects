<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/agmobile_tool_bar_height"
                xmlns:tools="http://schemas.android.com/tools"
                android:background="@color/agmobile_primary"
                android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/title_back"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:background="@drawable/cv_bg_btn_top"
        android:clickable="true"
        android:focusable="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal" >
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cv_ic_return_white"/>
        <TextView
            android:id="@+id/txt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/agmobile_text_title_bar"/>
    </LinearLayout>

    <View
        android:id="@+id/view_divider_back"
        android:layout_height="28dp"
        android:layout_width="2px"
        android:background="@color/agmobile_divider_title_bar"
        android:layout_gravity="center_vertical"/>

    <TextView
        android:id="@id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="18sp"
        android:singleLine="true"
        android:textColor="@color/agmobile_text_title_bar"
        android:ellipsize="end"
        tools:text="标题"/>

    <!--操作按钮项-->
    <LinearLayout
        android:id="@+id/ll_actions"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginLeft="14dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_toLeftOf="@+id/btn_more"
        android:layout_toStartOf="@id/btn_more">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_more"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/cv_bg_btn_top"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_more"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/cv_ic_add"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:textColor="@color/agmobile_text_title_bar"/>
    </LinearLayout>

</LinearLayout>