<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item
                android:top="-3px"
                android:right="-3px"
                android:left="-3px">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff"/>
                    <stroke android:color="#46c01b" android:width="2px"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_focused="false">
        <layer-list>
            <item
                android:top="-3px"
                android:right="-3px"
                android:left="-3px">
                <shape android:shape="rectangle">
                    <solid android:color="#ffffff"/>
                    <stroke android:color="#dadada" android:width="2px"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>